//========================
// Forms
//========================
.form
	position relative
	&__select
		display block
		font-size 1.3rem
		background-color white
		width 100%
		border-radius 3px
		height 2.5em
		cursor pointer
	&__label
		font-size 1.3rem
		&--overline
			display block
			margin-bottom 0.5em