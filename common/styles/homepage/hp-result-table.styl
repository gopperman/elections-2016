//========================
// Result Tables
//========================

.r-table
	margin 0 auto
	width 100%
	position relative
	border-bottom 3px solid set-gray('light')
	&__head
		border-bottom 3px solid set-gray('lightest')
	&__row:nth-of-type(even)
		background-color set-gray('lightest')
	&__square
		width 1.5em
		height 1.5em
		margin-bottom 0.5em
		float left
		margin 0 0.25em 0 1em
		vertical-align middle
	&__cell
		position relative
		vertical-align top
		padding 0.5em
		&:not(:first-of-type)
			text-align right
		p
			abbr
				+mq('bp-2')
					display none
			span.full
				display none
				+mq('bp-2')
					display inline-block

			line-height 1.5
			&:not(:last-child)
				font-size 1.2rem
				+mq('bp-2')
					font-size 1.3em
			&:last-child
				font-size 1.2rem
				+mq('bp-2')
					font-size 1.3rem
	&__name
		position relative
		padding-left 1.5em
		display inline
	.is-winner:before
		position absolute
		left 0.25em