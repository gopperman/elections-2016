//========================
// Messaging
//========================

.TestStatus
	background-color #f2f2f2
	text-align center
	letter-spacing 0.25em
	border-bottom solid set-gray('medium') 1px

// Timer
.timer
	text-align right
	margin-top 1em
	&__elements
		display inline-block
		background-color #efefef
		padding 0.5em 1em
		font-size 1.2rem
		line-height 1.5
		overflow hidden
		span
			display  block

// Tooltip
.map-component .tooltip-wrapper
	cursor default
	width 40rem
	position absolute
	top 0
	left 0
	margin-top 2.5rem
	padding 0
	z-index set-index('overlay')
	pointer-events none
	display none

	&.show
		display block

	.tooltip
		box-shadow 0 0 5px set-gray('medium')
		border-radius 3px
		padding 1.8rem
		margin 0
		background-color white
		position relative
		width auto

		.btn--close
			right 0.75em
			top 0.75em
		
		.r-table__name
			padding-left 0.5em

		@media (max-width: 40em)
			// pin to bottom
			position fixed
			bottom 0
			left 0 !important
			right 0
			
		.r-table__row .r-table__cell:first-of-type
			clearfix()
