//========================
// Messaging
//========================

.TestStatus
	background-color #f2f2f2
	text-align center
	letter-spacing 0.25em
	border-bottom solid set-gray('medium') 1px

.balance-of-power
	.chart-container
		padding-top 1em
		position relative
	svg
		display block
	.plumbline
		border-left set-gray('light') solid 1px
		position absolute
		top 0
		height 100%
		left 50%

// Timer
.timer
	text-align right
	&__elements
		display inline-block
		background-color #efefef
		padding 0.5em 1em
		font-size 1.2rem
		line-height 1.5
		overflow hidden
		span
			display  block

// Tooltip
.map-component .tooltip-wrapper
	cursor default
	width 40rem
	position absolute
	top 0
	left 0
	margin-top 2.5rem
	padding 0
	z-index set-index('overlay')
	pointer-events none
	display none

	&.show
		display block

	.tooltip
		box-shadow 0 0 5px set-gray('medium')
		border-radius 3px
		padding 1.8rem
		margin 0
		background-color white
		position relative
		width auto

		&__button
			position absolute
			font-size 1.5rem
			right 0.5em
			top 1em
			pointer-events all
			background-color transparent
			border none
			svg
				display block
		.r-table
			margin-top 2rem

		@media (max-width: 40em)
			// pin to bottom
			position fixed
			bottom 0
			left 0 !important
			right 0
