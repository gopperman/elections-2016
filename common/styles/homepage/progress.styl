//========================
// Progress
//========================
.results-bar
	background-color set-gray('lightest')
	position relative
	width 100%
	height 1.5em
	border-radius 3px
	span
		position absolute
		top 0
		bottom 0
		&:first-of-type
			left 0
			border-top-left-radius 3px
			border-bottom-left-radius 3px
		&:last-of-type
			right 0
			border-top-right-radius 3px
			border-bottom-right-radius 3px
.results-circle
	width 3.5em
	height @width
	border-radius 50%
	center(flex)
	justify-content center