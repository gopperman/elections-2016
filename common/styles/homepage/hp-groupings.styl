//========================
// Groupings
//========================

// Result grouping
.r-col
	padding-top 1em
	margin-bottom 1.5rem
	> *
		margin-bottom 1em
		&:not(:last-of-type)
			padding-bottom 1em
			border-bottom 1px solid set-gray('lightest')
	a, button
		margin-top 2em
		width 100%
	&.r-feature > *:not(:last-of-type)
		border-bottom none

.r-row
	display flex
	// flex-wrap wrap
	// > *
	// 	margin-right 1.5em
	.r-block__name--small
		text-align center
	&--full
		display flex
		flex-direction column
		flex-wrap wrap
		justify-content space-between
		+mq('bp-3')
			flex-direction row
		> *
			width 100%
			max-width 30em
			margin 0 auto 1em auto
			+mq('bp-3')
				width 49%
				margin 0 0 1em 0
			
			// &:not(:last-child)
			// 	margin-bottom 1em
			// 	+mq('bp-2')
			// 		margin-bottom 0

.r-feature
	padding 1em
	border 8px solid transparent
	border-image linear-gradient(to top,set-color('blue') 0,set-color('red') 100%)
	border-image-slice 1
	background-color white
