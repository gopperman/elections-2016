// ---------------------------------------
// Layouts
// ---------------------------------------

// Setting root sizes and base styles.
html
	text-size-adjust 100%

body
	font-feature-settings 'kern' 1, 'onum' 1, 'liga' 1
	font-family $serif
	color $offblack
	overflow-x hidden
a
	transition color 0.2s, background-color 0.2s
	color $globe-blue
	text-decoration none
	&:hover, &:active, &:focus
		color darken($globe-blue, 20)
		text-decoration none

nav ul
	list-style none

img, video
	display block
	width 100%

button
	cursor pointer

// Base button extend
$btn
	display inline-block
	text-align center
	overflow visible
	vertical-align middle
	border none
	text-decoration none
	transition 0.2s ease-in-out all

// Various hides
.hide-accessible
	hidden(accessible)
.hide-invisible
	hidden(invisible)
.hide-display
	hidden()

// Skip to main for accessibility
.skip-to-main
	hidden(accessible)
	&:focus
		width auto
		height auto
		background-color #efefef
		padding 0.5em
		z-index 1

// Global components
.container-lg
	width 90%
	max-width 60rem
	margin 0 auto
	> *:not(:first-child)
		margin-bottom 4em
.container-sm
	width 90%
	max-width 40rem
	margin 0 auto
	> *:not(:first-child)
		margin-bottom 4em

.container-downpage
	background-color set-gray('lightest')
	border-top 1px solid set-gray('light')
	padding-top 2em
	> *
		padding-bottom 4em
