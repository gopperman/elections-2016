// Tooltip
.map-component .tooltip-wrapper
	cursor default
	width 22em
	position absolute
	top 0
	left 0
	margin-top 2.5rem
	padding 0
	z-index 500
	pointer-events none
	display none

	&.show
		display block

	.tooltip
		box-shadow 0 0 5px set-gray('medium')
		border-radius 3px
		padding 1em
		margin 0
		background-color white
		position relative
		width auto

		@media (max-width: 50em)
			// pin to bottom
			position fixed
			bottom 0
			left 0 !important
			width 100%
		
		.r-table__row .r-table__cell:first-of-type
			width 70%

