//========================
// Messaging
//========================

.TestStatus
	background-color #f2f2f2
	text-align center
	letter-spacing 0.25em
	border-bottom solid set-gray('medium') 1px

.balance-of-power
	.chart-container
		padding-top 1em
		position relative
	svg
		display block
	.plumbline
		border-left set-gray('light') solid 1px
		position absolute
		top 0
		height 100%
		left 50%

// Timer
.timer
	text-align center
	transform translateY(-3em)
	margin-bottom -2em
	&__elements
		display inline-block
		background-color white
		padding 0.5em 1em
		font-size 0.8em
		line-height 1.8
		overflow hidden
		span
			display  block
			&:last-of-type
				font-size 0.9em

// Tooltip
.map-component .tooltip-wrapper
	cursor default
	width 25em
	position absolute
	top 0
	left 0
	margin-top 2.5rem
	padding 0
	z-index 500
	pointer-events none
	display none

	&.show
		display block

	.tooltip
		box-shadow 0 0 5px set-gray('medium')
		border-radius 3px
		padding 1em
		margin 0
		background-color white
		position relative
		width auto

		@media (max-width: 50em)
			// pin to bottom
			position fixed
			bottom 0
			left 0 !important
			width 100%
		
		.r-table__row .r-table__cell:first-of-type
			clearfix()
			width 80%
