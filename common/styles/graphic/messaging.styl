.TestStatus
	background-color #f2f2f2
	text-align center
	letter-spacing 0.25em
	border-bottom solid set-gray('medium') 1px

.balance-of-power
	.chart-container
		padding-top 1em
		position relative
	svg
		display block
	.plumbline
		border-left set-gray('light') solid 1px
		position absolute
		top 0
		height 100%
		left 50%

// Spinner
.spinner
	width 1em
	height @width
	position relative
	background-color white
	display inline-block
	&__pie
		width 50%
		height 100%
		transform-origin 100% 50%
		position absolute
		background-color mix(set-color('blue', 'dark'), set-color('red', 'dark'))
	&__rotator
		border-radius 100% 0 0 100% / 50% 0 0 50%
		z-index set-index('top')
		animation rotate 15s linear infinite
	&__filler
		border-radius 0 100% 100% 0 / 0 50% 50% 0
		left 50%
		opacity 0
		z-index set-index('top')
		animation opacity 15s steps(1, end) infinite reverse
	&__mask
		width 50%
		height 100%
		position absolute
		background-color inherit
		opacity 1
		z-index set-index('overlay')
		animation opacity 15s steps(1, end) infinite

@keyframes rotate
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)

@keyframes opacity
	0%
		opacity 1
	50%, 100%
		opacity 0

// Timer
.timer
	text-align center
	transform translateY(-3em)
	&__update
		display inline-block
		background-color white
		width 10em
		padding 1em 0
		font-size 0.8em

