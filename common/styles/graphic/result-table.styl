//========================
// Result Tables
//========================

.r-table
	// max-width 40rem
	margin 0 auto
	width 100%
	position relative
	border-bottom 3px solid set-gray('light')
	/.container-downpage &
		box-shadow 0 0 10px #999
		max-width 40rem
	&__head
		border-bottom 3px solid set-gray('lightest')
		/.container-downpage &
			background-color white
	&__row:nth-of-type(even)
		background-color set-gray('lightest')
		/.container-downpage &
			background-color white
	&__square
		width 1em
		height 1em
		margin-bottom 0.5em
		float left
		margin-right 0.25em
	&__cell
		vertical-align top
		padding 0.5em 1em
		&:not(:first-of-type)
			text-align right
		p
			abbr
				+mq('bp-2')
					display none
			span.full
				display none
				+mq('bp-2')
					display inline-block

			line-height 1.5
			&:not(:last-child)
				font-size 0.8em
				+mq('bp-2')
					font-size 1em
			&:last-child
				font-size 0.7em
				+mq('bp-2')
					font-size 0.8em


// Overflow container
.table-container--outer
	position relative
	&:after
		content ''
		display block
		z-index set-index('top')
		position absolute
		right 0
		top 0
		bottom 0
		background linear-gradient(to left, rgba(black, 0.2), rgba(black, 0) 60%)
		width 2em
		+mq('bp-1')
			display none
.table-container--inner
	overflow-x auto