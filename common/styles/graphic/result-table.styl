//========================
// Result Tables
//========================

.r-table
	width 100%
	max-width 40rem
	margin 0 auto
	position relative
	border-bottom 3px solid set-gray('light')
	&__head
		border-bottom 3px solid set-gray('lightest')
	&__row:nth-of-type(even)
		background-color set-gray('lightest')
	&__cell
		vertical-align top
		padding 0.5em
		p
			line-height 1.5
			&:not(:last-child)
				font-size 0.8em
				+mq('bp-2')
					font-size 1em
			&:last-child
				font-size 0.7em
				+mq('bp-2')
					font-size 0.8em