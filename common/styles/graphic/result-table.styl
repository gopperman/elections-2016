//========================
// Result Tables
//========================

.r-table
	width 100%
	max-width 40rem
	margin 0 auto
	position relative
	border-bottom 3px solid set-gray('light')
	/.container-downpage &
		box-shadow 0 0 10px #999
	&__head
		border-bottom 3px solid set-gray('lightest')
		/.container-downpage &
			background-color white
	&__row:nth-of-type(even)
		background-color set-gray('lightest')
		/.container-downpage &
			background-color white
	&__square
		width 1em
		height 1em
		margin-bottom 0.5em
		float left
		margin-right 0.25em
	&__cell
		vertical-align top
		padding 0.5em 1em
		&:not(:first-of-type)
			text-align right
		p
			abbr
				+mq('bp-2')
					display none
			span.full
				display none
				+mq('bp-2')
					display inline-block

			line-height 1.5
			&:not(:last-child)
				font-size 0.8em
				+mq('bp-2')
					font-size 1em
			&:last-child
				font-size 0.7em
				+mq('bp-2')
					font-size 0.8em
