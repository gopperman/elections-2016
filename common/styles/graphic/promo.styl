.promo
	padding 0 1em
	/.container-downpage + &
		background-color set-gray('lightest')
		.promo__content
			background-color white
	&__content
		text-align center
		max-width 45rem
		margin 0 auto
		padding 1.5em
		background-color set-gray('lightest')
	&__hed
		font-size 1.5em
		line-height 1.5
	&__copy
		font-size 1em
		line-height 1.5
		margin-bottom 1em