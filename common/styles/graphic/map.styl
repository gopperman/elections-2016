//=======================
// Map!
//=======================

.hide-labels-completely
	g.labels text
		display none

.map-component
	position relative
	display flex
	flex-direction column
	+mq('bp-3')
		flex-direction row
	.map__tools
		display flex
		// justify-content space-between
		margin-bottom 2em
		flex-direction column
		+mq('bp-3')
			width 30%
			margin-right 2em
		// 	flex-direction row
		a
			display block
			order 1
			width 100%
			max-width 25rem
			align-self center
			margin 0 0 2.5em 0
			+mq('bp-3')
				order 2
				margin 1.5em 0 0 0
			+ .map__select
				text-align left
				width 100%
				max-width 25rem
				order 2
				+mq('bp-3')
					order 1
		.map__select
			margin 0 auto
			text-align center
			width 100%
			max-width 25rem
			select
				border 3px solid set-gray('lightest')
				height 3rem
				+mq('bp-3')
					height 3.5rem
	.map-wrappers
		position relative
		width 100%
		+mq('bp-3')
			width 70%

	.us-map-wrapper
		position relative
		height 0
		width 100%
		padding 0
		padding-bottom 62.7%

	.mass-map-wrapper
		position relative
		height 0
		width 100%
		padding 0
		padding-bottom 61%

	.towns-map-wrapper
		position relative
		height 0
		width 75%
		padding 0
		padding-bottom 56.3%

	.inset-map-wrapper
		position absolute
		right 0
		bottom 0
		height 0
		width 25%
		padding 0
		padding-bottom 15.3%
		pointer-events none

	.full-map,
	.inset-map
		cursor default
		display block
		stroke-linecap round
		stroke-linejoin round
		position absolute
		width 100%
		height 100%
		left 0
		top 0

		text
			&.background
				stroke white
				stroke-width 3px

		&.inset-map
			position absolute
			bottom 0
			right 0
			pointer-events none

			g.outline
				fill set-gray('light')
				+mq('bp-2')
					fill set-gray('lightest')

			g.subset
				fill set-gray('darkest')
				+mq('bp-2')
					fill set-gray('dark')

		path
			&.selected
				stroke set-gray('darkest')
				stroke-width 2px

		g.features
			stroke white
			stroke-width 0.5px
			+mq('bp-2')
				stroke-width 1px

		g.labels
			stroke none
			fill set-gray('darkest')
			text-anchor middle
			pointer-events none

			text
				font-size 0.65em
				display none

			text.largest-town
				font-size 1.25em
				text-anchor start
				display block

			.DC,.NH,.CT,.RI,.DE,.MD,.NJ,.MS,.KY,.WV,.VT,.MA,.NC
				display none

			@media (min-width: 25em)
				text
					display block

			@media (min-width: 40em)
				text
					display block
					font-size 0.75em
				.MS,.KY,.WV,.VT,.MA,.NC
					display block

			@media (min-width: 50em)
				text
					font-size 0.75em
				.NJ
					display block

			@media (min-width: 60em)
				text
					font-size 0.8em
