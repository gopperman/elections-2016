//========================
// Hero
//========================
.hero
	center(flex)
	flex-direction column
	justify-content center
	overflow hidden
	position relative
	&__hed
		color set-gray('lightest')
		order 2
		text-shadow 0 0 8px #333
		/.js-loaded &
			opacity 0
		/.is-entered &
			animation appear-hed 0.75s 1.2s linear forwards
	&__flourish
		svg
			width 2em
			height @width
			fill set-gray('lightest')
			opacity 0.8
			rect
				/.js-loaded &
					transform scaleY(0)
				/.is-entered &
					transform-origin center bottom
					animation equalizer 0.5s alternate linear 5 forwards
					for i in (1..3)
						&:nth-of-type({i})
							// animation-duration i * 0.55s
							animation-delay 2 + (i * 0.25s)

@keyframes appear-hed
	from
		opacity 0
	to
		opacity 1

@keyframes equalizer
	from
		transform scaleY(0)
	to
		transform scaleY(1)