//========================
// Hero
//========================
.hero
	center(flex)
	flex-direction column
	justify-content center
	overflow hidden
	position relative
	margin-bottom 1.5em
	&__hed
		color set-gray('lightest')
		text-shadow 0 0 8px #333
		order 2
		&--animated
			opacity 0
			animation appear-hed 0.75s 1.2s linear forwards
	&__flourish
		svg
			width 2em
			height @width
			fill set-gray('lightest')
			opacity 0.8
			rect
				transform scaleY(0)
				transform-origin center bottom
				animation equalizer 0.5s alternate linear 5 forwards
				for i in (1..3)
					&:nth-of-type({i})
						// animation-duration i * 0.55s
						animation-delay 2 + (i * 0.25s)

@keyframes appear-hed
	from
		opacity 0
	to
		opacity 1

@keyframes equalizer
	from
		transform scaleY(0)
	to
		transform scaleY(1)