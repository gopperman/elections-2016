//========================
// Images
//========================
// Avatar
.avatar
	max-width 50px
	max-height @max-width
	border-radius 50%

// Lead
$bg-position-hidden = 15% 25rem, 80% 35rem, 50%, 50%
$bg-position-shown = 15% 100%, 80% 100%, 50%, 50%
.lead-img
	position relative
	background url($assets-path + 'lead/clinton.png') no-repeat, url($assets-path + 'lead/trump.png') no-repeat, url($assets-path + 'lead/map.png') no-repeat, linear-gradient(to top, set-color('red', light), set-color('blue', light))
	background-size 40%, 52%, 75%, 100%
	height 13em
	// Images shown on load
	background-position $bg-position-shown
	/.js-loaded &
		// Images hidden on load 
		background-position $bg-position-hidden
	@supports (background-blend-mode: multiply) and (background-blend-mode: overlay)
		background-blend-mode multiply, multiply, overlay
	&.is-entered
		animation pop 0.75s linear forwards
	+mq('bp-1')
		height 20rem
	&:before
		content ''
		display block
		position absolute
		left 0
		top 0
		bottom 0
		width 100%
		background-image url($assets-path + 'lead/texture.png')
		opacity 0.07

@keyframes pop
	from
		background-position $bg-position-hidden
	to
		background-position $bg-position-shown

// Icons
.is-winner:before
	content ''
	display inline-block
	width 1em
	height 1em
	background url($assets-path + 'misc/checkmark.svg') no-repeat 50%
	background-size contain
	margin-right 0.25em
