//========================
// Images
//========================
// Avatar
.avatar
	max-width 50px
	max-height @max-width
	border-radius 50%

// Lead
$bg-position-hidden = 15% 25rem, 80% 35rem, 50%, 50%
$bg-position-shown = 15% 100%, 80% 100%, 50%, 50%
.lead-img
	position relative
	background url($assets-path + 'lead/clinton.png') no-repeat, url($assets-path + 'lead/trump.png') no-repeat, url($assets-path + 'lead/map.png') no-repeat, linear-gradient(to top, desaturate(set-color('red', dark), 50%), desaturate(set-color('blue', dark), 50%))
	background-size 40%, 52%, 75%, 100%
	height 13em
	background-position $bg-position-hidden
	background-blend-mode multiply, multiply, overlay
	animation pop 0.75s linear forwards
	padding 1em
	+mq('bp-2')
		height 20rem
	&:before
		content ''
		display block
		position absolute
		left 0
		top 0
		bottom 0
		width 100%
		background-image url($assets-path + 'lead/texture.png')
		opacity 0.07

@keyframes pop
	from
		background-position $bg-position-hidden
	to
		background-position $bg-position-shown

.lead-bg
	position relative
	background url($assets-path + 'lead/map.png') no-repeat, linear-gradient(to top, desaturate(set-color('red', dark), 50%), desaturate(set-color('blue', dark), 50%))
	background-size 75%, 100%
	height 40vh
	background-position 50%, 50%
	background-blend-mode overlay
	padding 1em
	+mq('bp-2')
		height 50vh
	&:before
		content ''
		display block
		position absolute
		left 0
		top 0
		bottom 0
		width 100%
		background-image url($assets-path + 'lead/texture.png')
		opacity 0.07

// Icons

//Checkmark
.is-winner:before
