//========================
// Groupings
//========================

// Result grouping
.r-col
	padding-top 1em
	> *
		margin-bottom 1em
		&:not(:last-of-type)
			padding-bottom 1em
			border-bottom 1px solid set-gray('lightest')
	a, button
		margin-top 2em
		width 100%
	&.r-feature > *:not(:last-of-type)
		border-bottom none

.bop 
	> *:not(:last-child)
		margin-bottom 1em
	&-container
		max-width 30rem
		margin 0 auto
		padding 0 1em 3em 1em
	
	

.r-row
	display flex
	.r-block__name--small
		text-align center
	&--circle
		@extends .r-row
		flex-wrap wrap
		justify-content space-between
		> *
			padding 0.25em 0.5em
	&--full
		@extends .r-row
		flex-direction column
		flex-wrap wrap
		justify-content space-between
		+mq('bp-3')
			flex-direction row
		> *
			width 100%
			max-width 30em
			margin 0 auto 1em auto
			+mq('bp-3')
				width 49%
				margin 0 0 1em 0

.r-feature
	padding 1em
	border 8px solid transparent
	border-image linear-gradient(to top,set-color('blue') 0,set-color('red') 100%)
	border-image-slice 1
	background-color white