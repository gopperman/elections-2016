//========================
// Breaking
//========================

.breaking
	position relative
	width 100%
	padding 0.75em 1em
	min-height 3em
	box-shadow inset 0 -8px 15px -8px set-gray('medium')
	transition 0.5s ease-in-out all
	&.is-hidden
		transform translateY(-50vh)
		min-height 0
		height 0
		padding 0
	&__content
		display flex
		justify-content center
		margin-right 3em
	&__copy
		font-size 0.9em
		align-self center
		&:before
			content ''
			display inline-block
			vertical-align baseline
			width 1em
			height 1em
			border-radius 50%
			background linear-gradient(to left, set-color('red'), set-color('blue'))
			box-shadow 0 0 0 0 rgba(set-color('red', 'light'), 0.75)
			animation pulse 1.5s infinite
			margin-right 0.5em
		mark
			background-color transparent
			text-transform uppercase
			font-size 0.8em
		time
			display inline-block
			font-size 0.8em
			
	.btn--close
		top 0.25em
	.btn--tw
		margin-left 1em
		display inline-block
		height 1.7em
		width 3.1em

@keyframes pulse
	60%
		box-shadow 0 0 0 8px rgba(set-color('red', 'light'), 0)
	100%
		box-shadow 0 0 0 0 rgba(set-color('red', 'light'), 0)