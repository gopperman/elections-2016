//========================
// Result Blocks
//========================

// Summary
.r-block
	position relative
	clearfix()
	&__name
		font-size 1.1em
		line-height 1.2
		margin-bottom 0.25em
		+mq('bp-1')
			font-size 1.2em
		&--small
			font-size 0.9em
			margin-bottom 0.25em
	&__results
		display flex
		align-items flex-end
		justify-content space-between
	&__duo-results
		position relative
		.r-block__img
			transform translateY(-0.8em)
			display none
			+mq('bp-2')
				display block
	&__bar
		-ms-flex 0 1 auto
	&__meta
		font-size 0.8em
		&--feature
			margin-top 0.5em
			display flex
			justify-content space-between
			p
				font-size 0.7em
				&:nth-of-type(2)
					color set-gray('medium')
					position relative
					top -0.5em
					line-height 1em
					&:before
						content '\25B4'
						display block
						text-align center
						font-size 1.5em
		/.results-circle &
			background-color rgba(white, 0.8)
			padding 0.05em
			border-radius 3px
		/.r-block__results &
			margin-left 1em
			align-self flex-end
			&:only-of-type
				text-align right
			&:last-of-type
				text-align right
				width 35%
		/.r-block__duo-results &
			display inline-block
			margin-top 0.5em
			&:last-of-type
				position absolute
				right 0
	&__img
		&:first-of-type
			float left
			margin-right 0.5em
		&:last-of-type
			float right
			margin-left 0.5em
	&__aside
		font-size 0.6rem
		margin-left 1em
		text-transform uppercase
		color set-gray('dark')

// Feature text
.feat-text
	display flex
	justify-content space-between
	padding-bottom 0.5em
	align-items flex-end
	position relative
	&__name
		font-size 1em
		span
			display block
			+mq('bp-2')
				display inline-block
		&--number
			font-size 1.3em
			margin-right 0.25em
		&--center
			text-align center
			font-size 0.8em
			color set-gray('medium')
			padding 0 0.5em
			span
				display block
				+mq('bp-2')
					display inline-block
		&:last-of-type
			text-align right
