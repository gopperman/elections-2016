//========================
// Result Blocks
//========================

// Summary
.r-block
	position relative
	clearfix()
	&__name
		font-size 1.1em
		line-height 1.2
		margin-bottom 0.25em
		+mq('bp-1')
			font-size 1.2em
		&--small
			font-size 0.9em
			margin-bottom 0.25em
	&__results
		display flex
		align-items flex-end
		justify-content space-between
	&__duo-results
		position relative
	&__bar
		-ms-flex 0 1 auto
	&__meta
		font-size 0.8em
		/.results-circle &
			background-color rgba(white, 0.8)
			padding 0.05em
			border-radius 3px
		/.r-block__results &
			margin-left 1em
			align-self flex-end
			&:only-of-type
				text-align right
			&:nth-of-type(2)
				text-align right
				width 35%
		/.r-block__duo-results &
			display inline-block
			margin-top 0.5em
			&:nth-of-type(2)
				position absolute
				right 0
	&__img
		float left
		margin-right 0.5em

// Feature text
.feat-text
	display flex
	justify-content space-between
	padding-bottom 0.5em
	align-items flex-end
	position relative
	&__name
		font-size 1em
		span
			display block
			&:first-of-type
				margin-right 0.5em
			+mq('bp-2')
				display inline-block
		&--number
			font-size 1.3em
		&--center
			text-align center
			font-size 0.8em
			color set-gray('medium')
			padding 0 0.5em
			span
				display block
				+mq('bp-2')
					display inline-block
		&:last-of-type
			text-align right