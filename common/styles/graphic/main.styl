//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

.SwingStates

	ul
		width 100%
		overflow hidden

	li
		border solid red 1px
		float left
		margin 1em

.columns
	border solid red 1px
	width 100%
	overflow hidden

	.column
		width 50%
		float left

.map
	position relative
	svg
		cursor default
		display block
		stroke-linecap round
		stroke-linejoin round

		text
			&.background
				stroke white
				stroke-width 3px

		path
			&.selected
				stroke set-gray('darkest')
				stroke-width 2px

		g.features
			stroke white
			stroke-width 1px

		g.labels
			stroke none
			fill set-gray('darkest')
			font-size 0.65em
			text-anchor middle
			pointer-events none
			display none

			.DC,.NH,.CT,.RI,.DE,.MD,.NJ,.MS,.KY,.WV,.VT,.MA,.NC
				display none

			@media (min-width: 25em)
				display block

			@media (min-width: 40em)
				display block
				font-size 0.75em
				.MS,.KY,.WV,.VT,.MA,.NC
					display block

			@media (min-width: 50em)
				font-size 0.85em
				.NJ
					display block

			@media (min-width: 60em)
				font-size 0.9em

.Timer
	border solid black 1px

.ElectoralCollegeMap
	border solid black 1px

	li
		margin 1em
		border solid black 1px
