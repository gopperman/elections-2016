//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

.SwingStates

	ul
		width 100%
		overflow hidden

	li
		border solid red 1px
		float left
		margin 1em

.columns
	border solid red 1px
	width 100%
	overflow hidden

	.column
		width 50%
		float left

.map
	position relative
	svg
		display block
		stroke white
		stroke-width 1.5px
	.tie
		fill set-gray('light')

	.none
		fill yellow

	.selected
		stroke-width 3px

.Timer
	border solid black 1px

.ElectoralCollegeMap
	border solid black 1px

	li
		margin 1em
		border solid black 1px
